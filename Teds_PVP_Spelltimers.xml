<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
	<Frame name="Teds_PVP_Spelltimers_Frame" enableMouse="false" movable="false" parent="UIParent" enableKeyboard="false" hidden="false">
		<Anchors>
			<Anchor point="TOP">
				<!-- NYI: --><!--This offest is the default value, it will be changed via LUA to the saved position-->
				<Offset>
					<AbsDimension x="0" y="-50" />
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="1000" y="225" />
		</Size>
		<Layers>
			<Layer level="ARTWORK">
				<FontString parentKey="fontstring" text="ALERT" outline="NORMAL" font="Fonts\FRIZQT__.TTF" justifyV="TOP" justifyH="CENTER">
					<Anchors>
						<Anchor point="TOPLEFT" relativepoint="TOPLEFT" />
						<Anchor point="BOTTOMRIGHT" relativepoint="BOTTOMRIGHT" />
					</Anchors>
					<FontHeight val="45" />
					<Color r="1.0" g="0.0" b="0.0" />
				</FontString>
			</Layer>
		</Layers>
	</Frame>
	<Frame name="Teds_PVP_Spelltimers_DragFrame" enableMouse="true" movable="true" parent="UIParent" enableKeyboard="false" hidden="true">
		<Anchors>
			<Anchor point="TOP">
				<Offset>
					<AbsDimension x="0" y="-50" />
				</Offset>
			</Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="1000" y="225" />
		</Size>
		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize val="16"/>
			<TileSize val="32"/>
			<BackgroundInsets left="5" right="5" top="5" bottom="5"/>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString  parentKey="fontstring" text="Ted's PvP Spelltimers Mover|n|n|nDrag to Reposition" outline="NORMAL" font="Fonts\FRIZQT__.TTF" justifyV="MIDDLE" justifyH="CENTER">
					<Anchors>
						<Anchor point="TOPLEFT" relativepoint="TOPLEFT" />
						<Anchor point="BOTTOMRIGHT" relativepoint="BOTTOMRIGHT" />
					</Anchors>
					<FontHeight val="18" />
					<Color r="1.0" g="1.0" b="1.0" />
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Button parentKey="centerbutton" inherits="UIPanelButtonTemplate" text="Center Horizontally">
				<Size>
					<AbsDimension x="150" y="18" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOM" relativepoint="BOTTOM">
						<Offset>
							<AbsDimension x="-175" y="15" />
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button parentKey="resetbutton" inherits="UIPanelButtonTemplate" text="Reset">
				<Size>
					<AbsDimension x="150" y="18" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOM" relativepoint="BOTTOM">
						<Offset>
							<AbsDimension x="0" y="15" />
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
			<Button parentKey="donebutton" inherits="UIPanelButtonTemplate" text="Done Moving">
				<Size>
					<AbsDimension x="150" y="18" />
				</Size>
				<Anchors>
					<Anchor point="BOTTOM" relativepoint="BOTTOM">
						<Offset>
							<AbsDimension x="175" y="15" />
						</Offset>
					</Anchor>
				</Anchors>
			</Button>
		</Frames>
	</Frame>
</Ui>